{
  "format_version": "1.20.10",
  "minecraft:attachable": {
    "description": {
      "identifier": "weapons:vortex_gauntlet",
      "materials": {
        "default": "entity_alphatest",
        "enchanted": "entity_alphatest_glint"
      },
      "textures": {
        "bow_standby": "textures/items/weapons/vortex_gauntlet/vortex_gauntlet_standby",
        "bow_pulling_0": "textures/items/weapons/vortex_gauntlet/vortex_gauntlet_0",
        "bow_pulling_1": "textures/items/weapons/vortex_gauntlet/vortex_gauntlet_1",
        "bow_pulling_2": "textures/items/weapons/vortex_gauntlet/vortex_gauntlet_2",
        "enchanted": "textures/misc/enchanted_item_glint"
      },
      "geometry": {
        "bow_standby": "geometry.custom_bow_standby",
        "bow_pulling_0": "geometry.custom_bow_pulling_0",
        "bow_pulling_1": "geometry.custom_bow_pulling_1",
        "bow_pulling_2": "geometry.custom_bow_pulling_2"
      },
      "animations": {
        "wield": "animation.custom_bow.wield",
        "wield_first_person_pull": "animation.custom_bow.wield_first_person_pull"
      },
      "scripts": {
        "pre_animation": [
          "v.charge_amount = q.main_hand_item_use_duration > 0.0f ? (math.clamp((q.main_hand_item_max_duration - q.main_hand_item_use_duration) / 5, 1, 3)) : 0;"
        ],
        "animate": [
          "wield",
          {
            "wield_first_person_pull": "q.main_hand_item_use_duration > 0.0f && c.is_first_person"
          }
        ]
      },
      "render_controllers": [
        "controller.render.custom_bow"
      ]
    }
  }
}